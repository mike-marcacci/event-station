{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "newLine": "LF",
        "noEmit": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ]
    },
    "files": [
        "src/main.ts"
    ]
}
